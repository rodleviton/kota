{% extends 'partials/base.html.twig' %}

{% macro pageLinkName(text) %}{{- text|lower|replace({' ':'-'}) -}}
{% endmacro %}

{% block body %}
    {% for module in page.collection() %}
        <div id="{{ _self.pageLinkName(module.menu) }}"></div>

        {{ module.content }}
    {% endfor %}
{% endblock %}